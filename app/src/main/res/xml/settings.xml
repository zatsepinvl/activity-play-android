<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="General">
        <ListPreference
            android:entries="@array/words_languages_values"
            android:entryValues="@array/words_languages_keys"
            android:summary="%s"
            app:key="dictionaryLanguage"
            app:title="Dictionary language" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="fineForSkipping"
            app:summary="If enabled, team will be fined with 1 point for each skipped word"
            app:title="Make a fine for skipped word" />

        <SeekBarPreference
            android:max="200"
            app:defaultValue="60"
            app:key="roundTimeSeconds"
            app:min="10"
            app:showSeekBarValue="true"
            app:title="Seconds for one round"
            app:updatesContinuously="true" />

        <SeekBarPreference
            android:max="200"
            app:defaultValue="40"
            app:key="maxScore"
            app:min="10"
            app:showSeekBarValue="true"
            app:title="Total score to win"
            app:updatesContinuously="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Game actions">
        <CheckBoxPreference
            app:defaultValue="true"
            app:key="actionSay"
            app:summary="You have to explain a word saying it`s definition without using root words"
            app:title="Describe" />

        <CheckBoxPreference
            app:defaultValue="true"
            app:key="actionDraw"
            app:summary="You have to explain a word drawing it`s definition without using letters and digits"
            app:title="Paint" />

        <CheckBoxPreference
            app:defaultValue="true"
            app:key="actionShow"
            app:summary="You have to explain a word using gestures and body language only"
            app:title="Act" />
    </PreferenceCategory>
</PreferenceScreen>