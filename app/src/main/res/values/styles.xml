<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.ActivityPlay" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/md_grey_900</item>
        <item name="snackbarStyle">@style/Widget.MaterialComponents.Snackbar</item>
    </style>

    <style name="Widget.ActivityPlay.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">200dp</item>
    </style>

    <style name="Widget.ActivityPlay.Button.OutlinedButton.IconButton" parent="Widget.ActivityPlay.Button.OutlinedButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.ActivityPlay.Button.OutlinedButton.Back" parent="Widget.ActivityPlay.Button.OutlinedButton.IconButton">
        <item name="icon">@drawable/ic_arrow_back_grey_800_24dp</item>
    </style>

    <style name="Widget.ActivityPlay.TextView.Header" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.ActivityPlay.TextView.Body" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/md_grey_800</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.ActivityPlay.Card.Team" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:height">60dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="TextAppearance.Design.Snackbar.Message" parent="android:TextAppearance" tools:override="true">
        <item name="android:textColor">@color/md_grey_50</item>
    </style>

</resources>
