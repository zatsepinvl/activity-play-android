<resources>

    <!-- Base application theme. -->
    <style name="Theme.ActivityPlay" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="alertDialogTheme">@style/Theme.ActivityPlay.AlertDialog</item>
        <item name="alertDialogStyle">@style/Theme.ActivityPlay.AlertDialog</item>-->
    </style>

    <style name="Widget.ActivityPlay.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">200dp</item>
    </style>

    <style name="Theme.ActivityPlay.AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:buttonBarPositiveButtonStyle">
            @style/Widget.ActivityPlay.Button.OutlinedButton
        </item>
        <item name="android:buttonBarNegativeButtonStyle">
            @style/Widget.ActivityPlay.Button.OutlinedButton.Grey
        </item>
    </style>

    <style name="Widget.ActivityPlay.Button.OutlinedButton.Grey" parent="Widget.ActivityPlay.Button.OutlinedButton">
        <item name="strokeColor">@color/md_grey_600</item>
        <item name="android:textColor">@color/md_grey_600</item>
    </style>
</resources>
