<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="com.zatsepinvl.activity.play.game.GameViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gameFrameWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Word"
                android:text="@{viewmodel.currentTask.word.value}"
                android:textAlignment="center"
                android:textColor="@{viewmodel.currentTeam.color}"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/gameFrameAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Action"
                android:text="@{viewmodel.currentTask.action.name}"
                android:textAlignment="center"
                android:textColor="@{viewmodel.currentTeam.color}"
                android:textSize="30sp" />
        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/gameFrameFinishButton"
            style="@style/Widget.ActivityPlay.Button.OutlinedButton.Grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:onClick="@{() -> viewmodel.finishRound()}"
            app:icon="@drawable/ic_stop_black_24dp"
            android:text="Finish round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/gameFrameSkipButton"
                    style="@style/Widget.ActivityPlay.Button.OutlinedButton.Grey"
                    android:layout_width="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:onClick="@{() -> viewmodel.skipTask()}"
                    android:text="Skip" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/gameFrameDoneButton"
                    style="@style/Widget.ActivityPlay.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:onClick="@{() -> viewmodel.completeTask()}"
                    android:text="Done"
                    android:textColor="@{viewmodel.currentTeam.color}"
                    app:strokeColor="@{viewmodel.currentTeam.color}" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</layout>