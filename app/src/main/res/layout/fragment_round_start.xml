<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="com.zatsepinvl.activity.play.game.GameViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/gameStartRoundExitButton"
            style="@style/Widget.ActivityPlay.Button.OutlinedButton.Grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Main menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gameStartCurrentTeamName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Team name"
                android:text="@{viewmodel.currentTeam.name}"
                android:textAlignment="center"
                android:textColor="@{viewmodel.currentTeam.color}"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/gameStartCurrentTeamTotalScoreLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total score"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/gameStartCurrentTeamTotalScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="40"
                android:text="@{Integer.toString(viewmodel.currentTeamTotalScore())}"
                android:textAlignment="center"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/gameStartRoundStartButton"
                style="@style/Widget.ActivityPlay.Button.OutlinedButton"
                android:layout_weight="1"
                android:onClick="@{() -> viewmodel.startRound()}"
                android:text="Start round"
                android:textColor="@{viewmodel.currentTeam.color}"
                app:strokeColor="@{viewmodel.currentTeam.color}" />
        </LinearLayout>
    </FrameLayout>
</layout>