<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewmodel"
            type="com.zatsepinvl.activity.play.home.HomeViewModel" />
    </data>

    <FrameLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.fragment.HomeFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginTop="60dp"
            android:padding="20dp"
            android:text="Activity Play"
            android:textAlignment="center"
            android:textColor="@color/md_amber_800"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="20dp">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/homeNewGameButton"
                style="@style/Widget.ActivityPlay.Button.OutlinedButton"
                android:text="new game" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/homeContinueButton"
                style="@style/Widget.ActivityPlay.Button.OutlinedButton"
                android:layout_marginTop="20dp"
                android:enabled="@{viewmodel.canContinueGame()}"
                android:text="Continue" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/homeSettingsButton"
                style="@style/Widget.ActivityPlay.Button.OutlinedButton"
                android:layout_marginTop="20dp"
                android:text="Settings" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="20dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:text="Created by Vladimir Zatsepin"
            android:textAlignment="center" />

    </FrameLayout>
</layout>
