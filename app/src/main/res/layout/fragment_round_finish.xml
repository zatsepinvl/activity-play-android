<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewmodel"
            type="com.zatsepinvl.activity.play.game.GameViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/Widget.ActivityPlay.TextView.Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Round is over" />

            <TextView
                android:id="@+id/gameFinishTotalScoreLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total score"
                android:textAlignment="center"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/gameFinishTotalScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="123"
                android:text="@{Integer.toString(viewmodel.lastPlayedTeamScore())}"
                android:textAlignment="center"
                android:textSize="40sp" />
        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/gameFrameSkipButton"
            style="@style/Widget.ActivityPlay.Button.OutlinedButton"
            android:layout_gravity="center|bottom"
            android:layout_margin="16dp"
            android:background="@color/md_grey_700"
            android:onClick="@{() -> viewmodel.nextTeam()}"
            android:text="Done" />
    </FrameLayout>
</layout>