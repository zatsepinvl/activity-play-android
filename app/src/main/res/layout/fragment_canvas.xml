<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="com.zatsepinvl.activity.play.game.viewmodel.PlayRoundViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zatsepinvl.activity.play.android.view.PainView
            android:id="@+id/canvasPaintView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            custom:paintColor="@{viewmodel.currentTeam.color}" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/canvasBackButton"
                style="@style/Widget.ActivityPlay.Button.OutlinedButton.Back"
                android:layout_gravity="start"
                android:textColor="@{viewmodel.currentTeam.color}"
                app:icon="@drawable/ic_arrow_back_grey_800_24dp"
                app:iconTint="@{viewmodel.currentTeam.color}"
                app:rippleColor="@{viewmodel.currentTeam.color}"
                app:strokeColor="@{viewmodel.currentTeam.color}" />

            <TextView
                android:id="@+id/canvasRemainingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:hint="00"
                android:text="@{@string/inRoundSecondsLeft(viewmodel.remainingTimeSeconds)}"
                android:textAlignment="center"
                android:textSize="20sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/canvasClearButton"
                style="@style/Widget.ActivityPlay.Button.OutlinedButton.IconButton"
                android:layout_gravity="end"
                android:textColor="@{viewmodel.currentTeam.color}"
                app:icon="@drawable/ic_autorenew_black_24dp"
                app:iconTint="@{viewmodel.currentTeam.color}"
                app:rippleColor="@{viewmodel.currentTeam.color}"
                app:strokeColor="@{viewmodel.currentTeam.color}" />
        </FrameLayout>

    </FrameLayout>
</layout>
