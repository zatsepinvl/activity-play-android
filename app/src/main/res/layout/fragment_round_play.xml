<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.zatsepinvl.activity.play.game.viewmodel.PlayRoundViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gameFrameRemainingTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                tools:hint="10 seonds left"
                android:text="@{@string/inRoundSecondsLeft(viewmodel.remainingTimeSeconds)}"
                android:textAlignment="center"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/roundInActionImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/theater" />

                <TextView
                    android:id="@+id/gameFrameAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@{viewmodel.currentTask.action.name}"
                    android:textAlignment="center"
                    android:textSize="26sp"
                    tools:hint="Action" />
            </LinearLayout>

            <TextView
                android:id="@+id/gameFrameWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableBottom="@{viewmodel.isWordHidden() ? @drawable/ic_visibility_black_24dp : @drawable/ic_visibility_off_black_24dp}"
                android:onClick="@{() -> viewmodel.toggleWordVisibility()}"
                android:text="@{viewmodel.isWordHidden() ? @string/wordMask : viewmodel.currentTask.word.value}"
                android:textAlignment="center"
                android:textSize="40sp"
                tools:hint="Word" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4sp"
                android:layout_marginTop="20dp"
                android:text="@{@string/roundScore(viewmodel.currentTeamRoundScore)}"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:hint="10" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/gameFrameFinishButton"
            style="@style/Widget.ActivityPlay.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/finish_round"
            android:textColor="@{viewmodel.currentTeam.color}"
            app:icon="@drawable/ic_stop_black_24dp"
            app:iconTint="@{viewmodel.currentTeam.color}"
            app:rippleColor="@{viewmodel.currentTeam.color}"
            app:strokeColor="@{viewmodel.currentTeam.color}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <com.zatsepinvl.activity.play.android.view.Button
                android:id="@+id/gameFrameDrawButton"
                style="@style/Widget.ActivityPlay.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:text="@string/draw"
                app:color="@{viewmodel.currentTeam.color}"
                app:icon="@drawable/ic_format_paint_black_24dp"
                app:iconGravity="textStart" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.zatsepinvl.activity.play.android.view.Button
                    android:id="@+id/gameFrameSkipButton"
                    style="@style/Widget.ActivityPlay.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:onClick="@{() -> viewmodel.skipTask()}"
                    android:text="@string/skip_word"
                    app:color="@color/md_grey_600" />

                <com.zatsepinvl.activity.play.android.view.Button
                    android:id="@+id/gameFrameDoneButton"
                    style="@style/Widget.ActivityPlay.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:onClick="@{() -> viewmodel.completeTask()}"
                    android:text="@string/next_word"
                    app:color="@{viewmodel.currentTeam.color}" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>