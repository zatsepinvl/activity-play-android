<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.zatsepinvl.activity.play.home.fragment.SplashScreenFragment"
        android:label="SplashScreenFragment">
        <action
            android:id="@+id/home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/intro"
            app:destination="@id/introFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.zatsepinvl.activity.play.home.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/continueGame"
            app:destination="@id/startRoundFragment" />
        <action
            android:id="@+id/newGame"
            app:destination="@id/teamSettingsFragment">
            <argument
                android:name="navigationFlow"
                android:defaultValue="NEW_GAME"
                app:argType="com.zatsepinvl.activity.play.navigation.NavigationFlow" />
        </action>

        <action
            android:id="@+id/settings"
            app:destination="@id/gameSettingsFragment" />
        <action
            android:id="@+id/intro"
            app:destination="@id/introFragment" />
    </fragment>

    <fragment
        android:id="@+id/teamSettingsFragment"
        android:name="com.zatsepinvl.activity.play.team.fragment.TeamListFragment"
        android:label="TeamSettingsFragment">
        <argument
            android:name="navigationFlow"
            android:defaultValue="DEFAULT"
            app:argType="com.zatsepinvl.activity.play.navigation.NavigationFlow" />
        <action
            android:id="@+id/startRound"
            app:destination="@id/startRoundFragment">
            <argument
                android:name="navigationFlow"
                android:defaultValue="NEW_GAME"
                app:argType="com.zatsepinvl.activity.play.navigation.NavigationFlow" />
        </action>
        <action
            android:id="@+id/gameSettings"
            app:destination="@id/gameSettingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/gameSettingsFragment"
        android:name="com.zatsepinvl.activity.play.settings.fragment.GameSettingsFragment"
        android:label="GameSettingsFragment" >
        <action
            android:id="@+id/refresh"
            app:destination="@id/gameSettingsFragment"
            app:popUpTo="@+id/gameSettingsFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/startRoundFragment"
        android:name="com.zatsepinvl.activity.play.game.fragment.StartRoundFragment"
        android:label="StartGameFragment">
        <action
            android:id="@+id/playRound"
            app:destination="@id/playRoundFragment" />
        <action
            android:id="@+id/finishGame"
            app:destination="@id/finishGameFragment" />
        <action
            android:id="@+id/backToMenu"
            app:destination="@id/homeFragment" />
        <argument
            android:name="navigationFlow"
            android:defaultValue="DEFAULT"
            app:argType="com.zatsepinvl.activity.play.navigation.NavigationFlow" />
        <action
            android:id="@+id/settings"
            app:destination="@id/gameSettingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/playRoundFragment"
        android:name="com.zatsepinvl.activity.play.game.fragment.PlayRoundFragment"
        android:label="InGameFragment">
        <action
            android:id="@+id/askLastWord"
            app:destination="@+id/lastWordRoundFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/canvas"
            app:destination="@id/canvasFragment" />
    </fragment>

    <fragment
        android:id="@+id/finishRoundFragment"
        android:name="com.zatsepinvl.activity.play.game.fragment.FinishRoundFragment"
        android:label="FinishGameFragment">
        <action
            android:id="@+id/nextRound"
            app:destination="@id/startRoundFragment" />
    </fragment>

    <fragment
        android:id="@+id/finishGameFragment"
        android:name="com.zatsepinvl.activity.play.game.fragment.FinishGameFragment"
        android:label="fragment_game_finish"
        tools:layout="@layout/fragment_game_finish">
        <action
            android:id="@+id/backHome"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/canvasFragment"
        android:name="com.zatsepinvl.activity.play.game.fragment.CanvasFragment"
        android:label="CanvasFragment" >
        <action
            android:id="@+id/askLastWord"
            app:destination="@+id/lastWordRoundFragment" />
    </fragment>
    <fragment
        android:id="@+id/introFragment"
        android:name="com.zatsepinvl.activity.play.intro.fragment.IntroFragment"
        android:label="IntroFragment" >
        <action
            android:id="@+id/mainMenu"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/lastWordRoundFragment"
        android:name="com.zatsepinvl.activity.play.game.fragment.LastWordRoundFragment"
        android:label="LastWordRoundFragment" >
        <action
            android:id="@+id/finishRound"
            app:destination="@id/finishRoundFragment" />
    </fragment>

</navigation>